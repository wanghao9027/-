/*添加名片 pages/creade/index.wxss */
#wrap{
    width:100vw;
    background-color: #f7f7ff;
}
.top{
    box-sizing:border-box;
    padding:0 24rpx;
    width:100vw;
    background-color: #fff;
}
.swiper{
    width:100%;
    margin-top:10px;
}
.pic-1{
    width:100%;
    height: 800rpx;
    box-shadow:0rpx 0rpx 20px  #ddd;
}
.pic-2{
    width:100%;
    height: 500rpx;
    box-shadow:0rpx 0rpx 20px  #ddd;
}
.pic-3{
    width:100%;
    height: 800rpx;
    box-shadow:0rpx 0rpx 20px  #ddd;
}
.img{
    width:100%;
    height:100%;
}
.top-nav{
    width:100%;
}
.top-nav .h1{
    width:100%;
    height:100rpx;
    line-height:100rpx;
    font-weight:600;
}
.top-nav .tabs{
    display:flex;
    align-items: center;
    width:100%;
    height:165rpx;
}
/* 图片边框 */
.top-nav .tabs image{
    width:54rpx;
    height:85rpx;
    margin-right:20rpx;
}
.top-nav .tabs image:nth-child(3){
    width:130rpx;
    height:85rpx;
}
.top-nav .tabs image.red{
    border:1px solid #f00;
}
/* 名片内容 */
.content{
    box-sizing:border-box;
    padding: 0 28rpx;
    width:100%;
    margin-top:18rpx;
    background-color: #fff;
}
.content .list{
    width:100%;
   
}
.content .list .head{
    display:flex;
    align-items:center;
    justify-content:space-between;
    width:100%;
    height:100rpx;
    border-bottom:1px solid #f0f0f0;
}
.content .list .one{
    height:160rpx;
}
.content .list .one .list-pic{
    width:122rpx;
    height:122rpx;
}
.content .list .one .list-pic image{
    width:100%;
    height:100%;
}

.content .list .head input{
    text-align: right;
    color:#c9c8cb;
}
.content .list .h1{
    width:100%;
    height:90rpx;
    line-height:100rpx;
    font-weight:600;
}
.content .border{
    box-sizing: border-box;
    padding-bottom:20px;
    margin-top:20rpx;
}
.content .list .text{
    width:100%;
    height:194rpx;
    margin-top:10px;
    color:#d6d6d6;
    text-indent:25rpx;
    background-color:#f7f7f7;
    border-radius:10px;

}
.content .list .text-t{
    width:100%;
    height:294rpx;
}
.flex{
    display: flex;
    align-items: center;
    height:200rpx;
}
.flex image{
    width:120rpx;
    height:120rpx;
    margin:20rpx;
}
.text button{
    width:84%;
    height:100rpx;
    margin-top: -30rpx;
    color:#fff;
    background-color: red;
}
/* 图片展示 */
.pic-img{
    box-sizing: border-box;
    padding-bottom:20px;
    width:100%;
    height: 350rpx;
}
.pic-img .text-cent{
    width:200rpx;
    height:200rpx;
    font-size:80px;
    font-weight:400;
    text-align: center;
    line-height:200rpx;
    color:#b3b3b3;
    background-color:#f7f7f7 ;
}
.text-pic{
    box-sizing:border-box;
    padding: 0 25rpx;
    display:flex;
    align-items:center;
    justify-content: space-between;
    width:100%;
    height:100rpx;
   
    background-color:#f0f0f0;
    border:1px solid #c9c8cb;
    border-radius:10px;
}
.text-pic image{
    width:55rpx;
    height:35rpx;
}
.bottom{
    width:100%;
    height:200rpx;
    margin-top:10px;
}
.bottom button{
    width:80%;
    height:100rpx;
    margin:50rpx auto;
    background-color:#f00;
    color:#fff;
    line-height: 60rpx;
}