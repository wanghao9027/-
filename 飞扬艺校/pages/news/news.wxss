/* pages/news/news.wxss */
  .item{
    padding: 20rpx;
    /* border-bottom:10rpx solid #ccc; */
  }
  .newsItem{
    display: flex;
    padding: 10rpx 0;
    margin-right:20rpx;
    border-bottom: 1rpx solid #ccc;
  }
  .newsItem:nth-last-child(1){
    border-bottom: 0;
  }
  .newsItem .img{
    width:200rpx;
    height:150rpx;
    margin-right:20rpx;
  }
  .newsItem .img image{
    display: block;
    width: 100%;
    height:100%;
  }
  .right{
    flex:1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }