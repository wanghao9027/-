/**index.wxss**/
swiper{
  height: 480rpx;
}
.swiper-item{
  width: 100%;
}
.swiper-item image{
  display: block;
  width: 100%;
}
.tit{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom:10rpx;
}
.item{
  padding: 20rpx;
  border-bottom:10rpx solid #ccc;
}
.newsItem{
  display: flex;
  padding: 10rpx 0;
  margin-right:20rpx;
  border-bottom: 1rpx solid #ccc;
}
.newsItem:nth-last-child(1){
  border-bottom: 0;
}
.newsItem .img{
  width:200rpx;
  height:150rpx;
  margin-right:20rpx;
}
.newsItem .img image{
  display: block;
  width: 100%;
  height:100%;
}
.right{
  flex:1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.moment .title{
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom:10rpx;
}
.moment .video video{
  width:100%;
}
.environment image{
  width:100%;
}
.contact{
  padding: 20rpx 30rpx;
}
.way{
  margin-bottom: 20rpx;
}
.phone{
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border:1rpx solid #ccc;
  border-radius:10rpx;
  margin-bottom: 10rpx;
}
.leftBox{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.num{
  color:rgb(45,193,0);
}
.rightBox{
  font-size:42rpx;
}
